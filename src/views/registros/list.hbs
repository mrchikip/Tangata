<div class="container p-4">
  <div class="row">

    {{#each links}}
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <a href="{{url}}" target="_blank">
              <h3 class="card-title text-uppercase">
                {{title}}
              </h3>
            </a>
            <p class="card-text">
              {{description}}
            </p>
            <p>{{timeago created_at}}</p>
            <a href="/registros/delete/{{id}}" class="btn btn-danger">Delete
              link</a>
            <a href="/registros/edit/{{id}}" class="btn btn-secondary">Edit link</a>
          </div>
        </div>
      </div>
    {{else}}
      <div class="col-md-4 mx-auto">
        <div class="card card-body text-center">
          <p>No hay registros</p>
          <a href="/registros/add">Crear Uno</a>
        </div>
      </div>
    {{/each}}

  </div>
</div>