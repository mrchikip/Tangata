<div class="container p-4">
  <div class="row">

    {{#each links}}
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <a href="{{url}}" target="_blank">
              <h3 class="card-title text-uppercase">
                {{title}}
              </h3>
            </a>
            <p class="card-text">
              {{description}}
            </p>
            <p>{{timeago created_at}}</p>
            <a href="" class="btn btn-danger">Delete link</a>
            <a href="" class="btn btn-secondary">Edit link</a>
          </div>
        </div>
      </div>
    {{/each}}

  </div>
</div>