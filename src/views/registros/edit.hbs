<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/registros/edit/{{link.id}}" method="post">
            <div class="form-group">
              <input
                type="text"
                value="{{link.title}}"
                class="form-control"
                name="title"
                placeholder="title"
                autofocus
              />
            </div>
            <div class="form-group">
              <input
                type="url"
                value="{{link.url}}"
                class="form-control"
                name="url"
                placeholder="url"
              />
            </div>
            <div class="form-group">
              <textarea
                name="description"
                rows="2"
                class="form-control"
                placeholder="description"
              >{{link.description}}</textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-success">save</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>