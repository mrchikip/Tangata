<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/registros/add" method="post">
            <div class="form-group">
              <div class="form-floating mb-3">
                <input
                  type="number"
                  class="form-control"
                  name="cedula"
                  id="cedula"
                  placeholder="Cedula"
                  autofocus
                />
                <label for="floatingInput">Cedula</label>
              </div>
              <div class="form-floating mb-3">
                <input
                  type="text"
                  class="form-control"
                  id="nombre"
                  placeholder="Nombre"
                />
                <label for="floatingInput">Nombre</label>
              </div>
              <div class="form-floating mb-3">
                <input
                  type="text"
                  class="form-control"
                  id="apellido"
                  placeholder="Apellido"
                />
                <label for="floatingInput">Apellido</label>
              </div>
              <div class="form-floating mb-3">
                <select
                  class="form-select"
                  id="ccosto"
                  aria-label="Centro de Costos"
                >
                  {{#each ccostos}}
                    <option value="{{id}}">{{centroCosto}}</option>
                  {{/each}}
                </select>
                <label for="floatingSelect">Centro de Costos</label>
              </div>
              <div class="form-floating mb-3">
                <select
                  class="form-select"
                  id="proceso"
                  aria-label="Proceso"
                >
                  {{#each proceso}}
                    <option value="{{id}}">{{nombreProceso}}</option>
                  {{/each}}
                </select>
                <label for="floatingSelect">Proceso</label>
              </div>
              <div class="form-floating mb-2">
                <button class="btn btn-success">Guardar</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>